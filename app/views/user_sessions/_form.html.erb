<%= form_for(@user_session, :url => user_session_url) do |f| %>
  <% if @user_session.errors.any? %>
    <div id="error_explanation" class="error">
      <h2>Imposible registrar usuario</h2>

      <ul>
      <% @user_session.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<fieldset class="inputs">
  <div class="field">
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= f.submit 'Login'%>
  </div>
</fieldset>
<% end %>