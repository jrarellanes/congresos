<p>
  <b>Nombre:</b>
  <%= @participante.nombre %>
</p>

<p>
  <b>Apellido Paterno:</b>
  <%= @participante.apellido_paterno %>
</p>

<p>
  <b>Apellido Materno:</b>
  <%= @participante.apellido_materno %>
</p>

<p>
  <b>Email:</b>
  <%= @participante.email %>
</p>

<% if @participante.factura != nil %>
  <p>
    <b>Calle:</b>
    <%= @participante.calle %>
  </p>

  <p>
    <b>numero:</b>
    <%= @participante.numero %>
  </p>

  <p>
    <b>RFC:</b>
    <%= @participante.rfc %>
  </p>

  <p>
    <b>CURP:</b>
    <%= @participante.curp %>
  </p>

  <p>
    <b>Codigo Postal:</b>
    <%= @participante.cp %>
  </p>
<% end %>
<p>
  <b>Institucion:</b>
  <%= @participante.institucion %>
</p>

<p>
  <b>Ciudad:</b>
  <%= @participante.ciudad %>
</p>

<p>
  <b>Estado:</b>
  <%= @participante.estado.nombre %>
</p>

<p>
  <b>Tipo de asistente:</b>
  <%= @participante.persona_tipo.nombre %>
</p>

<% unless @participante.comprobante_pago_file_name == nil %>
  <div>
    <b>Comprobante de pago:</b>
    <% if imagen? @participante.comprobante_pago_file_name %>
      <div style="margin-top: 8px;">
        <%= image_tag @participante.comprobante_pago.url(:medium) %>
      </div>
    <% else %>
    
      <%= link_to "Ver archivo", @participante.comprobante_pago.url %>

    <% end %>
  </div>

<% end %>

<% unless @participante.talleres == nil or @participante.talleres = [] %>
  <div id ="talleres">
    <h3>Talleres</h3>
    <% @participante.talleres.each do |taller| %>
      <div>
        <%= taller.nombre %>
      </div>
    <% end %>
  </div>
<% end %>

<%= link_to "Congresos", congresos_url %>
