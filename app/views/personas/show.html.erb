<% if @participante.congreso.campos.include?(Campo.find_by_nombre "Nombre") %>
  <p>
    <b>Nombre:</b>
    <%= @participante.nombre unless @participante.nombre.nil? %>
  </p>
<% end %>

<% if @participante.congreso.campos.include?(Campo.find_by_nombre "Apellido Paterno") %>
  <p>
    <b>Apellido Paterno:</b>
    <%= @participante.apellido_paterno unless @participante.apellido_paterno.nil? %>
  </p>
<% end %>

<% if @participante.congreso.campos.include?(Campo.find_by_nombre "Apellido Materno") %>
  <p>
    <b>Apellido Materno:</b>
    <%= @participante.apellido_materno unless @participante.apellido_materno.nil? %>
