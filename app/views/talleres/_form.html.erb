<%= form_for(@taller) do |f| %>
  <% if @taller.errors.any? %>
    <div id="error_explanation" class="error">
      <h2>Imposible registrar taller</h2>

      <ul>
      <% @taller.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset class="inputs">
  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :descripcion %><br />
    <%= f.text_area :descripcion %>
  </div>
  <div class="field">
    <%= f.label :precio %><br />
    <%= f.text_field :precio %>
  </div>
  <div class="field">
    Fecha de inicio: <br /><%= date_select :taller, :fecha_inicio %><br />
  </div>
   <div class="field">
    Fecha fin curso: <br /><%= date_select :taller, :fecha_fin %><br />
  </div>
    <div class="field">
    <%= f.label :lugar %><br />
    <%= f.text_field :lugar %>
  </div>
    <div class="field">
    <%= select_hour(00) %>
    <%=  select_minute(00) %>
  </div>
  <div class="field">
    <%= f.label :max_participantes,"Cantidad mÃ¡xima de participantes" %><br />
    <%= f.text_field :max_participantes %>
  </div>
  <div class="field">
    <%= f.label :congreso_id,"Congreso" %><br />
    <%= f.collection_select :congreso_id, @congresos,:id, :nombre, :prompt => false %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit %>
  </div>
  </fieldset>
<% end %>
