<%= form_for(@congreso) do |f| %>
  <% if @congreso.errors.any? %>
    <div id="error_explanation" class="error">
      <h2>Imposible registrar congreso</h2>

      <ul>
      <% @congreso.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :descripcion %><br />
    <%= f.text_area :descripcion %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
