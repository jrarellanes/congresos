

<%= form_for(@congreso, :multipart => true) do |f| %>
  <% if @congreso.errors.any? %>
    <div id="error_explanation" class="error">
      <h2>Imposible registrar congreso</h2>

      <ul>
      <% @congreso.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<fieldset class="inputs">
  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :descripcion %><br />
    <%= f.text_area :descripcion %>
  </div>
  <div class="field">
    <%= f.label :precio %><br />
    <%= f.text_field :precio %>
  </div>
  <div class="field">
    <%= f.label :precio_descuento,"Precio con Descuento" %><br />
    <%= f.text_field :precio_descuento %>
  </div>
  <div class="field">
    Fecha de inicio: <br /><%= date_select :congreso, :fecha_inicio %><br />
  </div>
   <div class="field">
    Fecha fin curso: <br /><%= date_select :congreso, :fecha_fin %><br />
  </div>
   <div class="field">
    <%= f.label :lugar %><br />
    <%= f.text_field :lugar %>
  </div>
  <div class="field">
    <%= f.label :imagen %>
    <%= f.file_field :imagen %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit %>
  </div>
</fieldset>
<% end %>
