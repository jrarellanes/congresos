<h1>Lista de Congresos</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Descripcion</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @congresos.each do |congreso| %>
  <% if congreso_propio?(congreso) %>
      <tr>
        <td><%= congreso.nombre %></td>
        <td><%= link_to 'Ver Detalles', congreso %></td>
        <% if current_user_session %>
          <td><%= link_to 'Editar', edit_congreso_path(congreso) %></td>
          <td><%= button_to 'Eliminar', congreso, :confirm => "Estas seguro?", :method => :delete%></td>
        <% end %>
      </tr>
  <% end %>
<% end %>
</table>

<br />
<% if current_user_session %>
  <%= link_to 'Registrar Congreso', new_congreso_path %>
<% end %>
