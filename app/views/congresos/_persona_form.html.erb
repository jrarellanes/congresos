<%= form_for(@persona, :url => congreso_registrar_path(@congreso), :method => "post") do |f| %>
  <% if @persona.errors.any? %>
    <div id="error_explanation" class="error">
      <h2>Imposible registrar participante</h2>

      <ul>
      <% @persona.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset class="inputs">
  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :apellido_paterno %><br />
    <%= f.text_field :apellido_paterno %>
  </div>
  <div class="field">
    <%= f.label :apellido_materno %><br />
    <%= f.text_field :apellido_materno %>
  </div>
     <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
    <div class="field">
    <%= f.label :rfc, "RFC" %><br />
    <%= f.text_field :rfc %>
  </div>
    <div class="field">
    <%= f.label :curp %><br />
    <%= f.text_field :curp %>
  </div>
    <b>Direccion:</b>
    <div class="field">
    <%= f.label :calle %><br />
    <%= f.text_field :calle %><br/>
    <%= f.label :numero %><br />
    <%= f.text_field :numero %>
  </div>
    <div class="field">
    <%= f.label :cp, 'Codigo Postal' %><br />
    <%= f.text_field :cp %>
  </div>
    <div class="field">
    <%= f.label :institucion,"Institución" %><br />
    <%= f.text_field :institucion %>
  </div>
    <div class="field">
    <%= f.label :ciudad %><br />
    <%= f.text_field :ciudad %>
  </div>
   <div class="field">
  <%= f.label :estado %>
  <%= f.collection_select :estado_id, @estados,:id, :nombre, :prompt => false %>
</div>
   <div class="field">
     <h4>¿Necesitará Factura?</h4><%= check_box_tag(:factura) %>
  </div>
  <br/>

  <fieldset>
    <h5 class="legend"><span class="label">Talleres</span></h5>

    <ol>
      <% @congreso.talleres.each do |taller| %>
      <li>
        <%= raw("<span for='persona_taller_ids_' class='opt'>#{taller.nombre}</span>") -%>
        <%= check_box_tag "persona[taller_ids][]", taller.id, persona_inscrita_en_taller?(taller) -%>
        <%= f.label :precio %>
        <%= number_to_currency(taller.precio,:unit => "$") %>
      </li>
      <% end %>
    </ol>
  </fieldset>


  <br/>
  <div class="actions">
    <%= f.submit "Guardar Participante" %>
  </div>
  </fieldset>
<% end %>